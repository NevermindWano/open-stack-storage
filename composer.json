{
    "name": "endeveit/open-stack-storage",
    "type": "library",
    "description": "The port of python-cloudfiles library to work with OpenStack Object Storage",
    "keywords": ["openstack", "storage", "resty", "cloudfiles", "http", "rackspace"],
    "homepage": "http://github.com/endeveit/open-stack-storage",
    "license": "MIT",
    "authors": [
        {
            "name": "Nikita Vershinin",
            "email": "endeveit@gmail.com",
            "homepage": "http://endeveit.net"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "resty/resty": "@stable"
    },
    "require-dev": {
        "phpunit/phpunit": "~4",
        "squizlabs/php_codesniffer": "2.*"
    },
    "autoload": {
        "psr-4": {
            "OpenStackStorage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenStackStorageTest\\": "tests/src/"
        }
    }
}
